<section id="advertisement">
		<div class="container">
			<img src="images/shop/advertisement.jpg" alt="" />
		</div>
	</section>
	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					<div class="left-sidebar">
						<h2>Category</h2>
						<div class="panel-group category-products" id="accordian"><!--category-productsr-->
							{{#types}}
                            {{#if isSubUrl}}
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordian" href={{url}}>
                                                <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                                                {{dataValues.ten_loaisp}}
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="{{dataValues.ten_loaisp}}" class="panel-collapse collapse">
                                        <div class="panel-body">
                                            <ul>
                                                {{#suburl}}
                                                <li><a href={{link}}>{{ten_thuonghieu}} </a></li>
                                                {{/suburl}}
            
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            {{else}}
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title"><a href={{url}}>{{dataValues.ten_loaisp}}</a></h4>
                                    </div>
                                </div>
                            {{/if}}
                        {{/types}}
						</div><!--/category-productsr-->
					
						<div class="brands_products"><!--brands_products-->
							<h2>Brands</h2>
							<div class="brands-name">
								<ul class="nav nav-pills nav-stacked">
									{{#brands}}
									<li><a href={{url}}> <span class="pull-right">({{dataValues.so_sanpham}})</span>{{dataValues.ten_thuonghieu}}</a></li>
									{{/brands}}
								</ul>
							</div>
						</div><!--/brands_products-->
						
						<div class="price-range"><!--price-range-->
							<h2>Price Range</h2>
							<div class="well">
								 <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[250,450]" id="sl2" ><br />
								 <b>$ 0</b> <b class="pull-right">$ 600</b>
								 <div style="margin-top: 2rem;">
									<button class="btn btn-default add-to-cart" onclick="searchMinMax()">Search</button>
								</div>
							</div>
						</div><!--/price-range-->
						
						<div class="shipping text-center"><!--shipping-->
							<img src="images/home/shipping.jpg" alt="" />
						</div><!--/shipping-->
						
					</div>
				</div>
				
				<div class="col-sm-9 padding-right">
					<div class="features_items"><!--features_items-->
						<h2 class="title text-center">Features Items</h2>
						{{#data}}
							<div class="col-sm-4">
								<div class="product-image-wrapper">
									<div class="single-products">
										<div class="productinfo text-center">
											<img src={{url}} alt="" />
											<h2>${{gia_sanpham}}</h2>
											<p>{{ten_sanpham}}</p>
											<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
										</div>
										<div class="product-overlay">
											<div class="overlay-content">
												<h2>${{gia_sanpham}}</h2>
												<p>{{ten_sanpham}}</p>
												<a href={{url_product}} class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>View</a>
											</div>
										</div>
									</div>
									<div class="choose">
										<ul class="nav nav-pills nav-justified">
											<li><a href=""><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
											<li><a href=""><i class="fa fa-plus-square"></i>Add to compare</a></li>
										</ul>
									</div>
								</div>
							</div>
						{{/data}}
					</div><!--features_items-->
				<ul class="pagination">
							{{#each pages}}
								{{#if this.isActive}}
									<li class="active"><a href={{this.pageUrl}}>{{this.pageNumber}}</a></li>
								{{else}}
									<li><a href={{this.pageUrl}}>{{this.pageNumber}}</a></li>
								{{/if}}
							{{/each}}
							{{#if needArrow}}
								<li><a href={{arrowUrl}}>&raquo;</a></li>
							{{/if}}
							
						</ul>
				</div>
			</div>
		</div>
	</section>