<section id="cart_items">
	<div class="container">
		<div class="breadcrumbs">
			<ol class="breadcrumb">
				<li><a href="#">Home</a></li>
				{{#if checkout}}
					<li class="active">Check out</li>
				{{else}}
					<li class="active">Nothing to check out</li>
				{{/if}}
			</ol>
		</div>

		{{#if checkout}}
		<div class="shopper-informations">

			<form id="checkout-form">
				<div class="row">

					<div class="col-sm-5 clearfix">
						<div class="bill-to">
							<p>Bill To</p>
							<div class="form-one">
								<input id="id_cart" value="{{id_cart}}" style="display: none;" />
								<input id="email" type="email" placeholder="Email*" name="email" value="{{user.email}}"/>
								<input id="name" type="text" placeholder="Name*" name="name" value="{{user.name}}" required/>
								<input id="phone" type="text" placeholder="Phone" name="phone" value="{{user.phone}}" required/>
							</div>
							<div class="form-two">
								<input id="sonha" type="text" placeholder="Số nhà" name="sonha" value="{{address.so_nha}}" required/>
								<input id="street" type="text" placeholder="Tên đường" name="street" value="{{address.ten_duong}}" required/>
								<input id="ward" type="text" placeholder="Phường" name="ward" value="{{address.phuong}}" />
								<input id="district" type="text" placeholder="Quận" name="district" value="{{address.quan}}" />
								<select id="city" required>
									<option value="">Thành phố</option>
									{{#cities}}
										{{#if selected}}
										<option value="{{id}}" selected>{{ten_thanhpho}}</option>
										{{else}}
										<option value="{{id}}">{{ten_thanhpho}}</option>
										{{/if}}
									{{/cities}}
								</select>
								<input id="province" type="text" placeholder="Tỉnh" name="province" value="{{address.tinh}}" />
							</div>
						</div>
					</div>
					<div class="col-sm-4">
						<div class="order-message">
							<p>Shipping Order</p>
							<textarea id="message" name="message"
								placeholder="Notes about your order, Special Notes for Delivery" rows="16"></textarea>
						</div>
					</div>
					<div class="col-sm-3">
						<div class="shopper-info">
							<p>Checkout confirmation</p>
							<div class="payment-options">
								<span>
									<label><input type="checkbox" id="credit-card" name="payment" onclick="handlePayment(this.id)"> Credit card</label>
								</span>
								<span>
									<label><input type="checkbox" id="check-payment" name="payment" onclick="handlePayment(this.id)"> Check Payment</label>
								</span>
							</div>
							<div class="form-three disabled" id="credit-card-form">
								<input id="name-credit-card" type="text" placeholder="Name"/>
								<input id="card-number" type="text" placeholder="Card Number"/>
								<input id="expiry" type="text" placeholder="Expiry"/>
								<input id="cvv" type="password" placeholder="CVV/CVC"/>
							</div>

							<input class="btn btn-primary" type="submit" value="Check out" />
						</div>
					</div>
				</div>
			</form>
		</div>
		<div class="review-payment">
			<h2>Review & Payment</h2>
		</div>

		<div class="table-responsive cart_info">
			<table class="table table-condensed">
				<thead>
					<tr class="cart_menu">
						<td class="image">Item</td>
						<td class="description"></td>
						<td class="price">Price</td>
						<td class="quantity">Quantity</td>
						<td class="total">Total</td>
						<td></td>
					</tr>
				</thead>
				<tbody>
					{{#data}}
						<tr id="detail-cart_{{id_detailcart}}">

							<td class="cart_product">
								<a href={{link_sanpham}}><img src={{thumbnail}} alt=""></a>
							</td>
							<td class="cart_description">
								<h4><a href="">{{ten_sanpham}}</a></h4>
								<p>Web ID: {{id_sanpham}}</p>
							</td>
							<td class="cart_price">
								<p>${{gia}}</p>
							</td>
							<td class="cart_quantity">
								<div class="cart_quantity_button">
									
									<input class="cart_quantity_input" type="text" name="quantity"
										id="quanity_{{id_detailcart}}" value="{{so_luong}}" autocomplete="off" size="2" disabled>
									
								</div>
							</td>
							<td class="cart_total">
								<p class="cart_total_price" id="total_{{id_detailcart}}"> ${{tong_cong}}</p>
							</td>
							<td class="cart_delete">
							</td>
						</tr>
					{{/data}}
					{{#giftProducts}}
						<tr id="detail-cart_{{id_detailcart}}" class="cart_detail-voucher">
							<td class="cart_product">
								<a href={{link_sanpham}}><img src={{thumbnail}} alt=""></a>
							</td>
							<td class="cart_description">
								<h4><a href="">{{ten_sanpham}}</a></h4>
								<p>Web ID: {{id_sanpham}}</p>
							</td>
							<td class="cart_price">
								<p>${{gia}}</p>
							</td>
							<td class="cart_quantity">
								<div class="cart_quantity_button">
									<input class="cart_quantity_input" type="text" name="quantity" value="{{so_luong}}" autocomplete="off" size="2" disabled>
								</div>
							</td>
							<td class="cart_total">
								<p class="cart_total_price"> ${{tong_cong}}</p>
							</td>
							<td class="cart_delete">										
							</td>
						</tr>
					{{/giftProducts}}
					
					<tr>
						<td colspan="4">&nbsp;</td>
						<td colspan="2">
							<table class="table table-condensed total-result">
								<tr>
									<td>Cart Sub Total</td>
									<td>${{subTotal}}</td>
								</tr>
								<tr>
									<td>Discount</td>
									<td>{{discount}}%</td>
								</tr>
								{{!-- <tr class="shipping-cost">
									<td>Shipping Cost</td>
									<td>${{shippingCost}}</td>
								</tr> --}}
								<tr>
									<td>Total</td>
									<td><span>${{total}}</span></td>
								</tr>
							</table>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
		
		{{else}}
		{{/if}}
	</div>
</section>
<!--/#cart_items-->