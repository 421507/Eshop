<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Notification View</h2>
                    </div>
                </div>
                <div class="row tm-edit-product-row">
                    <div class="col-12">
                        <form method="post" id="reply-form" class="tm-edit-product-form">
                        <input id="id-noti" value="{{data.id}}" style="display: none;"/>
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12">
                                <div class="form-group mb-3">
                                    <label for="email">Email
                                    </label>
                                    <input id="email" name="email" type="email"
                                        class="form-control validate" value="{{data.email}}" disabled/>
                                </div>
                                
                                <div class="row">
                                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                                        <label for="name">Name
                                        </label>
                                        <input id="name" name="name" type="text" value=""
                                            class="form-control validate" required/>
                                    </div>
                                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                                        <label for="subject">Subject
                                        </label>
                                        <input id="subject" name="subject" type="text" value=""
                                            class="form-control validate" required/>
                                    </div>
                                    <div class="form-group mb-3 col-xs-12 col-sm-12">
                                        <label for="message">Message
                                        </label>
                                        <textarea id="message" name="message" type="text"
                                            class="form-control validate" required></textarea>
                                    </div>
                                </div>
                
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block text-uppercase">Reply</button>
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>