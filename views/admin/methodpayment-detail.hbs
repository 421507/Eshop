<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Edit Method Payment</h2>
                    </div>
                </div>
                <div class="row tm-edit-product-form">
                    <div class="col-12">
                        <form id="update-methodpayment-form" class="tm-edit-product-form" method='post'>
                        <input id="id-methodpayment" value="{{data.id}}" style="display: none;"/>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label for="name">Name
                                    </label>
                                    <input id="name" name="name" type="text" class="form-control validate" value="{{data.name}}" required />
                                </div>
                                
                            </div>
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label for="slug">Slug
                                    </label>
                                    <input id="slug" name="slug" type="text" class="form-control validate" value="{{data.slug}}" required />
                                </div>
                                
                            </div>
                            
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block text-uppercase">Edit
                                    Now</button>
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>