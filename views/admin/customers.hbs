<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">NAME</th>
                                <th scope="col">PHONE</th>
                                <th scope="col">EMAIL</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#data.customers}}
                            <tr id="{{id}}">
                                <td class="tm-product-name" onclick="viewCustomerDetail({{id}})" style="cursor: pointer;">
                                    {{name}}
                                </td>
                                <td>{{phone}}</td>
                                <td>{{email}}</td>
                                <td>                                    
                                    <a onclick="deleteCustomer({{id}})" class="tm-product-delete-link">
                                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/data.customers}}
                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                {{!-- <a href="/admin/addpresent" class="btn btn-primary btn-block text-uppercase mb-3">Add new present</a> --}}
                {{!-- <button class="btn btn-primary btn-block text-uppercase" onclick="deleteSelectedProducts()">
                    Delete selected presents
                </button> --}}
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">ID CUSTOMER</th>
                                <th scope="col">ID PRESENT</th>
                                <th scope="col">STATUS</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#data.customerPresent}}
                            <tr id="customerpresent-{{id}}">
                                <td class="tm-product-name" style="cursor: pointer;">
                                    {{customer}}
                                </td>
                                <td>{{present}}</td>
                                <td>{{status}}</td>
                                <td>                                    
                                    <a onclick="deleteCustomerPresent({{id}})" class="tm-product-delete-link">
                                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                    </a>
                                </td>
                            </tr>
                            {{/data.customerPresent}}
                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                {{!-- <a href="/admin/addpresent" class="btn btn-primary btn-block text-uppercase mb-3">Add new present</a> --}}
                {{!-- <button class="btn btn-primary btn-block text-uppercase" onclick="deleteSelectedProducts()">
                    Delete selected presents
                </button> --}}
            </div>
        </div>
        
    </div>
</div>