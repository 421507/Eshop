<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Edit Type Brand</h2>
                    </div>
                </div>
                <div class="row tm-edit-product-form">
                    <div class="col-12">
                        <form id="update-typebrand-form" class="tm-edit-product-form" method='post'>
                        <input id="id-typebrand" value="{{data.id}}" style="display: none;"/>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    <label for="type">Type</label>
                                    <select class="custom-select tm-select-accounts" id="type" name="type" required>
                                        <option value="">Select type</option>
                                        {{#data.types}}
                                        {{#if selected}}
                                        <option value='{{id}}' selected>{{name}}</option>
                                        {{else}}
                                        <option value='{{id}}'>{{name}}</option>
                                        {{/if}}
                                        {{/data.types}}
                                    </select>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="brand">Brand</label>
                                    <select class="custom-select tm-select-accounts" id="brand" name="brand" required>
                                        <option value="">Select brand</option>
                                        {{#data.brands}}
                                        {{#if selected}}
                                        <option value='{{id}}' selected>{{name}}</option>
                                        {{else}}
                                        <option value='{{id}}'>{{name}}</option>
                                        {{/if}}
                                        {{/data.brands}}
                                    </select>
                                </div>
                                
                            </div>
                            
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block text-uppercase">Update Type
                                    Now</button>
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>